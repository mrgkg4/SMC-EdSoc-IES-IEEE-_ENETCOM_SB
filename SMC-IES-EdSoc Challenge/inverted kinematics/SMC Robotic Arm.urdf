<robot name="robot_arm">
    <!-- World link (fixed, does not move) -->
    <link name="world">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.01"/>
            </geometry>
        </visual>
    </link>

    <!-- Base link -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.0225" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.050" radius="0.089"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.0225" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.050" radius="0.089"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.0225" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>

    <!-- Joint for rotating the base link -->
    <joint name="base_rotation_joint" type="revolute">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="10.0" velocity="1.0"/>
    </joint>

    <!-- Arm Link 1 -->
    <link name="arm1">
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.2"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0005" iyy="0.0005" izz="0.0005" ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>

    <!-- Shoulder Joint -->
    <joint name="shoulder_joint" type="revolute">
        <parent link="base_link"/>
        <child link="arm1"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-1" upper="1" effort="10.0" velocity="1.0"/>
    </joint>

    <!-- Arm Link 2 -->
    <link name="arm2">
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.2"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0005" iyy="0.0005" izz="0.0005" ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>

    <!-- Elbow Joint -->
    <joint name="elbow_joint" type="revolute">
        <parent link="arm1"/>
        <child link="arm2"/>
        <origin xyz="0 0 0.2" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-1" upper="1.8" effort="10.0" velocity="1.0"/>
    </joint>

    <!-- Tilt Link -->
    <link name="tilt">
        <visual>
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.15"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.15"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
            <mass value="0.3"/>
            <inertia ixx="0.0003" iyy="0.0003" izz="0.0003" ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>

    <!-- Tilt Joint -->
    <joint name="tilt_joint" type="revolute">
        <parent link="arm2"/>
        <child link="tilt"/>
        <origin xyz="0 0 0.2" rpy="0 0 0"/>
        <axis xyz="-1 0 0"/>
        <limit lower="-1.8" upper="0.5" effort="10.0" velocity="1.0"/>
    </joint>
</robot>
